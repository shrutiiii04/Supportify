<% layout("/layouts/boilerplate") %>
<head>
    <link rel="stylesheet" href="/css/newListing.css"> 
</head>
<body>
    <div class="container mt-2 pt-4 mb-5">
        <div class="form-container mx-auto p-4 shadow">
            <form action="/listings/<%= listing._id %>?_method=PUT" method="post" enctype="multipart/form-data">
                <!-- Title -->
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="invalid-feedback">Title is required</div>
                </div>
                
                <!-- Description -->
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" rows="3" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Description is required</div>
                </div>
                
                <!-- Image Upload -->
                <div class="mb-3">
                    <label for="image" class="form-label">Upload new Image</label>
                    <input type="file" name="listing[image]" class="form-control">
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                    <div class="invalid-feedback">Price is required</div>
                </div>

                <!-- Location and Country -->
                <div class="row mb-3">
                    <div class="col">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
                        <div class="invalid-feedback">Location is required</div>
                    </div>
                    <div class="col">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                        <div class="invalid-feedback">Country is required</div>
                    </div>
                </div>

                <!-- Contact Details -->
                <div class="row mb-3">
                    <div class="col">
                        <label for="contact-email" class="form-label">Email</label>
                        <input type="email" name="listing[contactDetails][email]" value="<%= listing.contactDetails.email %>" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid email address</div>
                    </div>
                    <div class="col">
                        <label for="contact-phone" class="form-label">Phone</label>
                        <input type="tel" name="listing[contactDetails][phone]" value="<%= listing.contactDetails.phone %>" class="form-control" required pattern="^\d{10}$">
                        <div class="invalid-feedback">Please enter a valid 10-digit phone number</div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">UPDATE</button>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
